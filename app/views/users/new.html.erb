<h3>ユーザー新規作成</h3>
 
    <%= form_with model: @user do |f| %>
    
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th><%= f.label :start ,"開始日" %></th>
          <td><%= f.date_field :start, min: Date.current %></td>
        </tr>
        <tr>
          <th><%= f.label :fin ,"終了日" %></th>
          <td><%= f.date_field :fin , min: Date.tomorrow %></td>
        </tr>
        <tr>
          <th><%= f.label :all ,"終日" %></th>
          <td><%= f.check_box :all %></td>
        </tr>
        <tr>
          <th><%= f.label :memo ,"メモ" %></th>
          <td><%= f.text_area :memo %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
        </ul>
      </div>
    <% end %>